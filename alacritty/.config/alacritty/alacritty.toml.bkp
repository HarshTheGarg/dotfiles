
[env]
TERM = "xterm-256color"

[font]
size = 8.0

[font.bold]
family = "MesloLGS Nerd Font Mono"
# family = "CaskaydiaCove Nerd Font"
style = "Bold"

[font.bold_italic]
# family = "CaskaydiaCove Nerd Font"
family = "MesloLGS Nerd Font Mono"
style = "Bold Italic"

[font.italic]
# family = "CaskaydiaCove Nerd Font"
family = "MesloLGS Nerd Font Mono"
style = "Italic"

[font.normal]
family = "MesloLGS Nerd Font Mono"
# family = "CaskaydiaCove Nerd Font"
style = "Regular"

[general]
import = [
  "~/.config/alacritty/catppuccin-mocha.toml"
]

[window]
opacity = 0.9
padding.x = 10
padding.y = 10


draw_bold_text_with_bright_colors = true

